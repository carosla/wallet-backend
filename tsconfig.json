{
  "compilerOptions": {
    "target": "ES6",                  
    "module": "CommonJS",              
    "strict": true,                    
    "baseUrl": "./",                   
    "paths": {
      "@src/*": ["./src/*"]            
    },
    "outDir": "./dist",                
    "rootDir": "./src",                
    "esModuleInterop": true,           
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,              
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
